<!doctype html>
<html>
  <head>
    <title>Thumbnails of: {{feed.title.$t}}</title>
    <style>
      body{ text-align: center; }
      .container{ width: 960px; margin: 0 auto; }
      img{ width: 25%; display: block; float: left; }
      img:nth-child(4n+1){ clear: right; }
    </style>
  </head>
  <body>
    <h1>Thumbnails of: {{feed.title.$t}}</h1>
    <div class='container'>
      {{#each feed.entry }}
        <img src="{{ media$group.media$thumbnail.[0].url }}" title="{{title.$t}}">
      {{/each}}
    </div>
  </body>
</html>
